{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
        "../node_modules/@types"
    ]
  },
  "exclude": [
    "../node_modules",
    "dist"
  ],
  "include": [
    "../**/*"
  ]
}
