{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "no-constant-condition": true,

    "component-class-suffix": [true, "Component"],
    "component-selector": [false, "element", ["fgpa"], "kebab-case"],
    "directive-class-suffix": [true, "Directive"],
    "directive-selector": [false, "attribute", ["fgpa"], "camelCase"],
    "import-destructuring-spacing": true,
    "invoke-injectable": true,
    "no-access-missing-member": true,
    "no-attribute-parameter-decorator": true,
    "no-forward-ref": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "pipe-naming": [true, "camelCase", "fgpa"],
    "templates-use-public": true,
    "use-host-property-decorator": true,
    "use-input-property-decorator": true,
    "use-life-cycle-interface": true,
    "use-output-property-decorator": true,
    "use-pipe-transform-interface": true,

    "no-conditional-assignment": true,
    "no-console": false,
    "no-constant-condition": true,
    "no-control-regex": true,
    "no-duplicate-case": true,
    "no-empty": true,
    "no-empty-character-class": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-inner-declarations": [true, "functions"],
    "no-invalid-regexp": true,
    "ter-no-irregular-whitespace": [true],
    "no-regex-spaces": true,
    "ter-no-sparse-arrays": [true],
    "no-unexpected-multiline": true,
    "no-unsafe-finally": true,
    "use-isnan": true,
    "valid-jsdoc": [true, { "requireReturn": false }],
    "valid-typeof": true,

    "ban": [true,"eval"],
    "curly": [true, "as-needed"],
    "cyclomatic-complexity": [true, 7],
    "forin": true,
    "label-position": true,
    "no-arg": true,
    "no-construct": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-empty": true,
    "no-eval": true,
    "no-invalid-this": true,
    "no-magic-numbers": true,
    "no-multi-spaces": true,
    "no-switch-case-fall-through": true,
    "no-unused-expression": true,
    "no-unused-new": true,
    "radix": true,
    "switch-default": true,
    "triple-equals": true,

    "no-shadowed-variable": true,
    "no-unused-variable": true,
    "no-use-before-declare": true,

    "handle-callback-err": [true, "error"],

    "array-bracket-spacing": [true, "always"],
    "block-spacing": [true, "always"],
    "brace-style": [true, "1tbs", { "allowSingleLine": true }],
    "comment-format": [true, "check-space", "check-uppercase"],
    "eofline": true,
    "indent": [true, "spaces", 4],
    "linebreak-style": [true, "LF"],
    "new-parens": true,
    "no-bitwise": true,
    "no-consecutive-blank-lines": true,
    "no-trailing-whitespace": true,
    "no-use-before-declare": true,
    "object-curly-spacing": [true, "always"],
    "object-literal-key-quotes": [true, "never"],
    "object-literal-sort-keys": false,
    "one-variable-per-declaration": true,
    "ordered-imports": false,
    "quotemark": [true, "single", "jsx-double"],
    "semicolon": [true, "always"],
    "sort-imports": [false],
    "space-in-parens": [true, "never"],
    "ter-func-call-spacing": [true, "never"],
    "ter-indent": [true, 4],
    "ter-max-len": [true, {
        "code": 120,
        "ignoreImports": false,
        "ignoreUrls": true,
        "ignorePattern": "^\\s*(let|const)\\s.+=\\s*require\\s*\\("
    }],
    "max-line-length": [true, 120],
    "trailing-comma": [true, "never"],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"]
  }
}
